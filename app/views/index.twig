{% extends 'layout.twig' %}
{% block body %}
  <h1>{{title}}</h1>
  <p>Welcome to {{title}}</p>
  <a href="" class="btn btn-primary">Ajouter une équipe</a>
  <a href="" class="btn btn-primary">Ajouter un joueur</a>
  <table class="table">
    <thead>
      <tr>
        <th>id</th>
        <th>Nom</th>
        <th>Catégorie</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      {% for task in tasks %}
      <tr>
        <td>{{ task.id }}</td>
        <td>{{ task.name }}</td>
        <td>{{ task.category.name }}</td>
        <td>
          <a href="" class="btn btn-success">Éditer</a>
          <a href="" class="btn btn-danger">Supprimer</a>
        </td>
      </tr>
      {% endfor %}
    </tbody>
{% endblock %}
